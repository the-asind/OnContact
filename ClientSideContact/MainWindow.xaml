<Window x:Class="ClientSideContact.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientSideContact"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="3">
            
            <TextBox Name="MessageTextBox" Height="120" IsEnabled="True"></TextBox>
            <TextBox Name="AnswerTextBox" Height="120" IsReadOnly="True"></TextBox>
            
            <Button Height="34" Name="DisconnectButton" Click="DisconnectButton_Click" Content="Disconnect"></Button>
            <Button Height="34" Name="SendButton" Click="SendButton_Click" Content="Send"></Button>
            <Button Height="34" Name="ConnectButton" Click="ConnectButton_Click" Content="Connect"></Button>
        </StackPanel>
    </Grid>
</Window>
